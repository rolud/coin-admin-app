<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinAdmin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blu_profondo</item>
        <item name="colorPrimaryDark">@color/blu_notte</item>
        <item name="colorAccent">@color/blu_notte</item>

        <item name="colorBackground">@color/chiarodiluna</item>
        <item name="colorBackground_lv1">@color/white</item>
        <item name="colorBackground_dialog">@color/white</item>

        <item name="colorContent">@color/black</item>
        <item name="colorContentSoft">@color/grigio_fumo</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorBackground</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:textColor">?attr/colorContent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>