<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinAdmin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blu_profondo</item>
        <item name="colorPrimaryDark">@color/blu_notte</item>
        <item name="colorAccent">@color/blu_oceano</item>


        <item name="colorBackground">@color/black</item>
        <item name="colorBackground_lv1">@color/lava</item>
        <item name="colorBackground_dialog">@color/lava</item>

        <item name="colorContent">@color/white</item>
        <item name="colorContentSoft">@color/grigio_fumo</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorBackground</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:textColor">?attr/colorContent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Splashscreen theme. -->
    <style name="Theme.CoinAdmin.SplashScreen" parent="Theme.CoinAdmin">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:navigationBarColor">@color/blu_notte</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>