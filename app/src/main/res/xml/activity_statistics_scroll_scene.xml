<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/as_chart_paid_in"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintDimensionRatio="H 1,1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toStartOf="@id/as_chart_paid_out"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible"/>
        <Constraint android:id="@+id/as_chart_paid_out"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintDimensionRatio="H 1,1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/as_chart_paid_in"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint android:id="@+id/as_paid_in_category_standing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@id/as_chart_paid_in"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toStartOf="@id/as_paid_out_category_standing_layout"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="0.75"
            android:visibility="visible"/>
        <Constraint android:id="@+id/as_paid_out_category_standing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@id/as_chart_paid_in"
            app:layout_constraintStart_toEndOf="@id/as_paid_in_category_standing_layout"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="0.75"
            android:visibility="visible"/>
        <Constraint android:id="@+id/as_period_trend_chart"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/as_paid_in_category_standing_layout"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"/>
        <Constraint android:id="@+id/as_daily_bar_chart"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/as_period_trend_chart"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toEndOf="@id/endGuideline" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/as_chart_paid_in"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintDimensionRatio="H 1,1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toStartOf="@id/as_chart_paid_out"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0"
            android:visibility="invisible"/>
        <Constraint android:id="@+id/as_chart_paid_out"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent=".35"
            app:layout_constraintDimensionRatio="H 1,1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/as_chart_paid_in"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0"
            android:visibility="invisible"/>
        <Constraint android:id="@+id/as_paid_in_category_standing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@id/as_chart_paid_in"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toStartOf="@id/as_paid_out_category_standing_layout"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0"
            android:visibility="invisible"/>
        <Constraint android:id="@+id/as_paid_out_category_standing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@id/as_chart_paid_in"
            app:layout_constraintStart_toEndOf="@id/as_paid_in_category_standing_layout"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0"
            android:visibility="invisible"/>
        <Constraint android:id="@+id/as_period_trend_chart"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"/>
        <Constraint android:id="@+id/as_daily_bar_chart"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/as_period_trend_chart"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintEnd_toEndOf="@id/endGuideline" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />
</MotionScene>
